{
  "name": "ddk",
  "version": "0.9.9a",
  "main": "index.js",
  "private": true,
  "scripts": {
    "tsc": "tsc",
    "build": "npm run build:core && npm run build:api",
    "start": "npm run start:core & npm run start:api",
    "start:api": "node --trace-warnings --no-deprecation --max-old-space-size=8192 dist/api/app.js",
    "start:core": "node --trace-warnings --no-deprecation --max-old-space-size=8192 dist/core/app.js",
    "start:api:profiling": "node --trace-warnings --prof --log-timer-events --max-old-space-size=8192 dist/api/app.js",
    "start:core:profiling": "node --trace-warnings --prof --log-timer-events --max-old-space-size=8192 dist/core/app.js",
    "server": "npm run server:core & npm run server:api",
    "server:api": "nodemon --trace-warnings --max-old-space-size=8192 --watch dist/api/app.js dist/api/app.js",
    "server:core": "nodemon --trace-warnings --max-old-space-size=8192 --watch dist/core/app.js dist/core/app.js",
    "debug:core": "nodemon --trace-warnings --inspect=0.0.0.0:9229 --max-old-space-size=8192 --watch dist/core/app.js dist/core/app.js",
    "jsdoc": "jsdoc -c docs/conf.json --verbose --pedantic",
    "server-docs": "npm run jsdoc && http-server docs/jsdoc/",
    "build:api": "./node_modules/webpack/bin/webpack.js --env.service=api --progress --profile --colors --display-modules",
    "build:core": "./node_modules/webpack/bin/webpack.js --env.service=core --progress --profile --colors --display-modules",
    "build:genesis": "./node_modules/webpack/bin/webpack.js --env.service=genesis --colors",
    "build:test:api": "./node_modules/webpack/bin/webpack.js --env.service=test-api --colors",
    "generate": "npm run build:genesis && NODE_ENV_IN=mainnet node --max-old-space-size=8192 dist/generateGenesis.js",
    "watch": "npm run watch:core & npm run watch:api",
    "watch:api": "./node_modules/webpack/bin/webpack.js --env.service=api --progress --colors --watch",
    "watch:core": "./node_modules/webpack/bin/webpack.js --env.service=core --progress --colors --watch",
    "clean": "rm -rf node_modules/ dist/ dapps/ .nyc_output/ logs/ .npm/ .config/ .node-gyp",
    "watch:with_update": "npm install && npm run watch",
    "watch:with_update_clean": "npm run clean && npm install && npm run watch",
    "test": "npm run test:api",
    "test:api": "export NODE_PATH=./ && mocha --require ts-node/register './test/api/**/*.test.ts'",
    "test:core": "export NODE_PATH=./ && mocha --require ts-node/register './test/core/**/*.test.ts'",
    "test:functionality": "export NODE_PATH=./ && mocha --require ts-node/register ./test/functionality/server-loader.ts './test/functionality/**/*.test.ts'"
  },
  "author": "DDK Foundation <http://www.ddkoin.com/>",
  "license": "GPL-3.0",
  "dependencies": {
    "autobind-decorator": "^2.4.0",
    "chai": "^4.2.0",
    "chai-sorted": "^0.2.0",
    "crypto-browserify": "=3.11.0",
    "dotenv": "^4.0.0",
    "ip": "=1.1.5",
    "mocha": "^3.5.3",
    "nodemon": "^1.18.9",
    "pg-promise": "^8.6.0",
    "rxjs": "^6.4.0",
    "socket.io": "1.7.2",
    "socket.io-client": "2.2.0",
    "sodium-native": "^2.3.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "typescript": "^3.4.1",
    "uuid": "^3.3.2",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^1.7.2",
    "z-schema": "^3.18.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-arrays": "^1.0.2",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.18",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/z-schema": "^3.16.32",
    "ts-node": "^8.0.3"
  }
}
