{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "mocha",
    "async-await"
  ],
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": "airbnb-base",
  "rules": {
    "indent": ["error", 4],
    "no-underscore-dangle": "off",
    "max-len": ["error", 120],
    "comma-dangle": "off",
    "global-require": "warn",
    "no-param-reassign": "off",
    "consistent-return": "off",
    "no-continue": "off",
    "no-plusplus": "off"
  }
}