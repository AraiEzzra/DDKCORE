{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "api/*": ["./api/*"],
      "core/*": ["./core/*"],
      "backlog/*": ["./backlog/*"],
      "shared/*": ["./shared/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "esnext"
    ]
  },
  "include": [
    "api/**/*",
    "core/**/*",
    "backlog/**/*",
    "shared/**/*",
    "test/**/*"
  ]
}
